<Page
    x:Class="FileManager.Views.MainPageTitle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileManager.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="1000"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Background ="{ThemeResource SystemColorHighlightColor}" MinWidth="500" Height="100" CornerRadius="20" Opacity="0.3" Margin="240,0,240,0" VerticalAlignment="Center">
            <TextBlock Text="{x:Bind ViewModel.Title }" FontSize="40" HorizontalAlignment="Center" Opacity="1" Height="60"/>
        </Border>
    </Grid>
</Page>
